<odoo>
    <data>
        <record id="department_list_view" model="ir.ui.view">
            <field name="name">department list view</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <list>

                        <field name="name"/>
                        <field name="Capacity"/>
                        <field name="Is_opened"/>
                        <field name="patient_ids"/>

                </list>
            </field>
        </record>
        <record id="department_form_view" model="ir.ui.view">
            <field name="name">department form view</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="Capacity"/>
                        <field name="Is_opened"/>
                        <field name="patient_ids"/>
                    </group>
                </form>
            </field>


        </record>
        <record id="hms_department_action" model="ir.actions.act_window">
            <field name="name">department</field>
            <field name="res_model">hms.department</field>
        </record>

        <menuitem id="hms_department_menu"
                  name="department"
                  parent="hms_root"
                  action="hms_department_action"/>



    </data>


</odoo>