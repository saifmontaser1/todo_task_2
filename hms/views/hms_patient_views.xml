<odoo>
    <data>

        <record id="patient_list_view" model="ir.ui.view">
            <field name="name">patient list view</field>
            <field name="model">hms.patient</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                            <field name="birth_date"/>
                            <field name="blood_type"/>
                            <field name="age"/>
                </list>
            </field>
        </record>
        <record id="patient_form_view" model="ir.ui.view">
            <field name="name">patient form view</field>
            <field name="model">hms.patient</field>
            <field name="arch" type="xml">
               <form>

                    <sheet>

                        <group>
                            <group string="Basic Info">
                            <field name="name"/>
                                <field name="email"/>
                            <field name="birth_date"/>
                                <field name="age"/>
                            </group>
                            <group string="Health Info">
                                <field name="blood_type"/>
                                <field name="history" invisible="age &lt; 50"/>
                                <field name="state"/>
                                <field name="PCR"/>
                                <field name="CR_ratio"/>
                                <field name="department_id" domain="[('Is_opened','=',True)]"/>
                                <field name="doctors_ids" widget="many2many_tags" readonly="not department_id" groups="hms.hms_manager_group"/>
                            </group>

                        </group>
                        <notebook>
                            <page name="Log_history" string="logs">
                                <field name="log_ids">
                                    <list editable="bottom">
                                        <field name="created_by"/>
                                        <field name="date"/>
                                        <field name="description"/>


                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
               </form>
            </field>
        </record>
        <record id="patient_actions" model="ir.actions.act_window">
            <field name="name">Patient</field>
            <field name="res_model">hms.patient</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="hms_root"
                  name="HMS"/>
        <menuitem id="hms_patients_menu"
                  name="patient"
                  parent="hms_root"
                  action="patient_actions"/>

    </data>
</odoo>