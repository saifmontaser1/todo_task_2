<odoo>
    <template id="report_hms_patient_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <h2 style="color:#C70039;">Patient Status Report</h2>
                    <table style="width:100%; margin-bottom:20px;">
                        <tr>
                            <td style="width:70%; vertical-align:top;">
                                <strong>Name:</strong> <span t-esc="o.name"/><br/>
                                <strong>Age:</strong> <span t-esc="o.age"/><br/>
                                <strong>Department:</strong> <span t-esc="o.department_id.name"/><br/>
                                <strong>Doctors:</strong>
                                <t t-foreach="o.doctors_ids" t-as="doc">
                                    <span t-esc="doc.name"/> <t t-if="not loop.last">, </t>
                                </t><br/>
                            </td>
                            <td style="width:30%; text-align:right;">
                                <img t-if="o.image" t-att-src="'data:image/png;base64,%s' % o.image" style="max-height:100px;"/>
                            </td>
                        </tr>
                    </table>
                    <table style="width:100%;">
                        <tr>
                            <td><strong>Birth date:</strong> <span t-esc="o.birth_date"/></td>
                            <td><strong>PCR:</strong> <span t-esc="o.PCR"/></td>
                            <td><strong>Blood Type:</strong> <span t-esc="o.blood_type"/></td>
                            <td><strong>Email:</strong> <span t-esc="o.email"/></td>
                        </tr>
                    </table>
                    <br/>
                    <h4 style="color:#C70039;">Log History</h4>
                    <table class="table table-condensed" style="width:100%; border:1px solid #ccc;">
                        <thead>
                            <tr style="background-color:#007BFF; color:white;">
                                <th>User</th>
                                <th>Date</th>
                                <th>Info</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr><td colspan="3" style="text-align:center;">[ Example row, connect to actual log model if needed ]</td></tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>