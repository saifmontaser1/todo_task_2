<odoo>
    <record id="todo_task_list_view" model="ir.ui.view">
        <field name="name">todo task list</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <list decoration-danger="(is_late)">
                <field name="name"/>
                <field name="due_date"/>
                <field name="assign_to_id"/>
            </list>
        </field>
    </record>
    <record id="todo_task_form_view" model="ir.ui.view">
        <field name="name">todo task form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                       <button name="action_new" type="object" string="Set To New" class="btn-primary"
                               invisible="status == 'new'"/>
                       <button name="action_in_progress" type="object" string="Set To In Progress" class="btn-secondary"
                               invisible="status != 'new'"/>
                       <button name="action_completed" type="object" string="Set To Completed" class="btn-success"
                               invisible="status != 'in_progress'"/>
                        <button name="action_closed" type="object" string="Set To closed" class="btn-primary"
                               invisible="1"/>
                       <field name="status" widget="statusbar"/>
                   </header>
                    <div class="oe_title">
                       <label for ='ref'/>
                       <h1>
                           <field name="ref"/>
                       </h1>
                       <label for ='name'/>
                       <h3>
                           <field name="name" readonly="status in ['completed','closed']"/>
                       </h3>
                   </div>
                    <group>
                        <field name="description" readonly="status in ['completed','closed']"/>
                        <field name="due_date" readonly="status in ['completed','closed']"/>
                        <field name="assign_to_id" readonly="status in ['completed','closed']"/>
                        <field name="estimated_time" readonly="status in ['completed','closed']"/>
                        <field name="is_late" readonly="1"/>
                    </group>
                    <notebook>
                       <page string="Timesheet">
                           <field name="line_ids" readonly="status in ['completed','closed']">
                               <list editable="bottom">
                                   <field name="date"/>
                                   <field name="description"/>
                                   <field name="time"/>
                               </list>
                           </field>
                       </page>
                   </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="todo_search" model="ir.ui.view">
        <field name="name">todo task search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="assign_to_id"/>

                <filter name="is_new" string="New" domain="[('status','=','new')]"/>
                <filter name="is_in_progress" string="In progress" domain="[('status','=','in_progress')]"/>
                <filter name="is_completed" string="Completed" domain="[('status','=','completed')]"/>

                <filter name="group_by_assign" string="Assign To" context="{'group_by':'assign_to_id'}"/>
                <filter name="group_by_status" string="Status" context="{'group_by':'status'}"/>
                <filter name="group_by_due_date" string="Due Date" context="{'group_by':'due_date'}"/>
            </search>
        </field>
    </record>
    <record id="todo_server_action" model="ir.actions.server">
        <field name="name">Closed</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">
            action=records.action_closed()
        </field>
    </record>
    <record id="check_due_date_cron" model="ir.cron">
        <field name="name">ToDo:check Due Date</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">model.check_due_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
<!--        <field name="numbercall">-1</field>-->
        <field name="active">True</field>
    </record>

    <record id="all_tasks_action" model="ir.actions.act_window">
        <field name="name">All Tasks</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="assign_to_server_action" model="ir.actions.server">
        <field name="name">Assign Tasks</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">
            action=records.action_open_assign_tasks_wizard()
        </field>
    </record>
</odoo>
