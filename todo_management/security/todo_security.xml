<odoo>
        <record id="todo_category" model="ir.module.category">
            <field name="name">ToDo Groups</field>
        </record>

        <record id="todo_manager_group" model="res.groups">
            <field name="name">ToDo Manager</field>
            <field name="category_id" ref="todo_category"/>
        </record>

        <record id="todo_user_group" model="res.groups">
            <field name="name">ToDo User</field>
            <field name="category_id" ref="todo_category"/>
        </record>

        <record id="todo_task_rule_user" model="ir.rule">
            <field name="name">todo_task_rule_user</field>
            <field name="model_id" ref="todo_management.model_todo_task"/>
            <field name="domain_force">[('assign_to_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('todo_management.todo_user_group'))]"/>

        </record>
</odoo>
